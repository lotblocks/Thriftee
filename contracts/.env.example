# Private Key (without 0x prefix)
# WARNING: Never commit your actual private key to version control
PRIVATE_KEY=your_private_key_here

# RPC URLs
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_RPC_URL=https://polygon-rpc.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id

# Alternative RPC providers (uncomment to use)
# MUMBAI_RPC_URL=https://matic-mumbai.chainstacklabs.com
# POLYGON_RPC_URL=https://rpc-mainnet.matic.network
# ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your_alchemy_key

# Block Explorer API Keys (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Chainlink VRF Subscription IDs
# Create subscriptions at https://vrf.chain.link/
VRF_SUBSCRIPTION_ID_MUMBAI=1
VRF_SUBSCRIPTION_ID_POLYGON=1
VRF_SUBSCRIPTION_ID_ETHEREUM=1

# Gas Reporting (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
REPORT_GAS=false

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false

# Contract Addresses (filled after deployment)
RAFFLE_CONTRACT_MUMBAI=
RAFFLE_CONTRACT_POLYGON=
RAFFLE_CONTRACT_ETHEREUM=

# Deployment Configuration
DEPLOY_VERIFY=true
DEPLOY_WAIT_CONFIRMATIONS=2

# Role Configuration
# Add addresses that should receive specific roles after deployment
ADMIN_ADDRESSES=
OPERATOR_ADDRESSES=
PAUSER_ADDRESSES=
MANAGER_ADDRESSES=